-content_for :menu do
  =admin_menu
#content
  .main.full
    -unless @community_requests.empty?
      %h2 Community Requests
      %table{ :cellpadding => 0, :cellspacing => 0 }
        %thead
          %tr
            %th Date
            %th Zip Code
        %tbody
          =render :partial => "community_request", :collection => @community_requests
    %p="#{User.count} users"
    %p="#{Community.count} communities"
    %p="#{Business.count} businesses (#{@inactives.length} inactive)"
    -unless @inactives.empty?
      %h2 Business Requests
      %table{ :cellpadding => 0, :cellspacing => 0 }
        %thead
          %tr
            %th Name
            %th Community
            %th Date Signed Up
        %tbody
          =render :partial => "business_request", :collection => @inactives
  #rightbar
    =render 'user_view_button' unless session[:cogster]
    =admin_or_merchant_view_button
    
