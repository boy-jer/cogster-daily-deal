.business
  =link_to_if can?(:read, purchase.business), image_tag(purchase.business.medium_image), purchase.business
  .info
    %h4=link_to_if can?(:read, purchase.business), purchase.business.name, purchase.business
    %p="Purchased #{number_to_currency(purchase.amount)} on #{purchase.created_at.strftime("%B %d")}"
    %table.nice{ :cellpadding => 0, :cellspacing => 0 }
      %thead
        %tr.column_names
          %th Cogster Cash
          %th Balance
          %th.period Spending Period
          %th Status
      %tbody
        = render :partial => 'coupon', :collection => purchase.coupons
    .clear
