#content
  .main.full
    %h2 Purchases
    %table{ :cellpadding => 0, :cellspacing => 0 }
      %thead
        %tr
          %th{ :colspan => 3 } &nbsp;
          %th{ :colspan => 3 * @project.redemption_schedule.length } Amount of Cogster Cash to Redeem
        %tr
          %th{ :colspan => 3 } Cogster
          -@project.redemption_schedule.length.times do |n|
            %th{ :colspan => 3 } Period
        %tr
          %th Name
          %th Purchase Date
          %th Purchase Amt
          -@project.redemption_schedule.length.times do |n|
            %th Amt
            %th Start
            %th End
      %tbody
        =render :partial => 'purchase', :collection => @purchases
