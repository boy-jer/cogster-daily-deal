#content
  .main.full
    %h2 Cogster Customer List
    %p="as of #{Time.now.strftime("%I:%M%P ET, %m/%d/%y")}"
    %table#redemptions.nice{ :cellpadding => 0, :cellspacing => 0 }
      %thead
        %tr.column_names
          %th{ :colspan => 2 } Cogster
          %th{ :colspan => @project.redemption_schedule.length } Visit Period
          %th{ :colspan => 2} Purchase Details
        %tr.column_names
          %th Name
          %th ID
          -@project.redemption_schedule.length.times do |n|
            %th=n+1
          %th Date
          %th Amount
      %tbody
        =render :partial => 'purchase', :collection => @purchases
