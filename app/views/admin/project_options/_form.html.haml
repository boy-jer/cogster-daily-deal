=error_messages_for @project_option
%fieldset.field
  =form.label :description, nil, :class => "required"
  =form.text_field :description, :class => "text"
  %table{ :cellpadding => 0, :cellspacing => 0}
    %thead
      %tr
        %th Duration
        %th Return Rate
        %th
    %tfoot
      %tr
        %td{ :colspan => 3 }
          %a#add-new-increment.right{:href => "#"} Add New Interval
    %tbody
      =render :partial => "interval", :collection => @project_option.redemption_schedule
.field
  =submit_tag "#{@project_option.persisted?? 'Update' : 'Create'}", :class => "submit"
  
