-content_for :menu do
  =admin_menu
#content
  =notice_or_alert
  .main.narrow
    %h2 Unconfirmed Users
    =paginated_section @users do
      %table{ :cellpadding => 0, :cellspacing => 0 }
        %thead
          %tr
            %th Name
            %th Community
            %th Type
            %th Sign Up Date
            %th{ :colspan => 2} &nbsp;
          %tbody
            =render :partial => 'unconfirmed', :collection => @users
  #rightbar
    %h3 Other User Types
    %ul
      %li=link_to "Cogsters", :type => nil, :page => 1
      %li=link_to "Admin", :type => 'admin', :page => 1
      %li=link_to "Merchants", :type => 'merchant', :page => 1
