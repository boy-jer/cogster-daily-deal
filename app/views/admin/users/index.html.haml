-content_for :menu do
  =admin_menu
#content
  .main.narrow
    %h2 Users
    %h3 Merchants
    %table{ :cellpadding => 0, :cellspacing => 0 }
      %thead
        %tr
          %th Name
          %th Business
          %th Active
          %th Last Login
        %tbody
          =render :partial => 'merchant', :collection => @merchants
    %h3 Cogsters
    %table{ :cellpadding => 0, :cellspacing => 0 }
      %thead
        %tr
          %th Name
          %th Community
          %th Last Login
      %tbody
        =render :partial => 'cogster', :collection => @cogsters
    %h3 Admin
    %table{ :cellpadding => 0, :cellspacing => 0 }
      %thead
        %tr
          %th Name
          %th Last Login
      %tbody
        =render :partial => 'admin', :collection => @admin
    =link_to 'Add User', new_admin_user_path
