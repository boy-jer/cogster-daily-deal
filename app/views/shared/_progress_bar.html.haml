-social ||= nil
.progress
  .progress_bar_background
    %div{ :class => "progress_bar initial_progress #{group_progress(project)}", :style => "width:#{project.percent_funded_less(current_user)}$;"}
    %div{ :class => "personal_progress_bar final_progress #{individual_progress(project)}", :style => "width:#{project.percent_funded_by(current_user)}%;"}
  .progress_bar_score
    %strong="#{project.percent_funded}%"
    %br/
    %span FUNDED
  -if social
    .progress_share
      %span Share This:
      =link_to image_tag('buttons/share-facebook.png', :alt => "Share this business on Facebook"), '/business/share/facebook/56', :title => "Share this Business on Facebook", :class => 'new_window'
      =link_to image_tag('buttons/share-twitter.png', :alt => "Share this business on Twitter"), '/business/share/twitter/56', :title => "Share this Business on Twitter", :class => 'new_window'
  -else
    .clear
.progress_data_container
  %table
    %tfoot
      %tr
        %th COGS
        %th FUNDED
        %th TARGET GOAL
    %tbody
      %tr
        %td#supporters=project.supporters.count 
        %td#funding=number_to_currency(project.amount_funded, :precision => 0)
        %td=number_to_currency(project.goal, :precision => 0)
  -if project.percent_funded < 100 && social != true && false
    .progress_data
      %strong=link_to "Fund This Project", new_business_purchase_path(project.business)
  .clear
