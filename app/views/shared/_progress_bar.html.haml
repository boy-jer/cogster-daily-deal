-social ||= nil
.progress
  .progress_bar_background
    %div{ :class => "progress_bar initial_progress #{group_progress(project)}", :style => "width:#{project.percent_funded_less(current_user)}%;"}
    %div{ :class => "personal_progress_bar final_progress #{individual_progress(project)}", :style => "width:#{project.percent_funded_by(current_user)}%;", :title => "This is your contribution to the project"}
  .progress_bar_score
    %strong="#{project.percent_funded}%"
    %br/
    %span FUNDED
.progress_data_container
  %table
    %tfoot
      %tr
        %th COGS
        %th FUNDED
        %th TARGET GOAL
    %tbody
      %tr
        %td#supporters=project.supporters.count 
        %td#funding=number_to_currency(project.funded, :precision => 0)
        %td=number_to_currency(project.goal, :precision => 0)
  -if project.percent_funded < 100 && social != true 
    .progress_data
      %strong=link_to "Support >", new_business_purchase_url(business, :protocol => 'https')
  .clear
